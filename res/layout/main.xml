<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1"
              android:background="@color/White"
              android:baselineAligned="true">
        <LinearLayout android:layout_height="32dp"
                 android:layout_width="match_parent"
                 android:layout_margin="5dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/moves"
                android:textColor="@color/DarkGray"
                android:id="@+id/highestmoves"
                android:background="@drawable/mytext"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/mybest"
                android:textColor="@color/DarkGray"
                android:id="@+id/textView1"
                />
        <TextView
            android:id="@+id/highestscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/mytext"
            android:text="@string/number"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/DarkGray" />
    </LinearLayout>
    <LinearLayout android:layout_height="32dp"
                 android:layout_width="match_parent"
                 android:layout_margin="5dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/DarkGray"
                android:text="@string/moves"
                android:id="@+id/lowestmoves"
                android:background="@drawable/mytext"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/myworst"
                android:textColor="@color/DarkGray"
                android:id="@+id/textView4"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/number"
                android:textColor="@color/DarkGray"
                android:id="@+id/lowestscore"
                android:background="@drawable/mytext"/>
    </LinearLayout>
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/griglia"
            >
        <GridView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:stretchMode="columnWidth"
                android:id="@+id/gridView"
                android:layout_gravity="left|center_vertical"
                android:numColumns="10"/>
    </FrameLayout>
    <LinearLayout android:layout_height="32dp"
                 android:layout_width="match_parent"
                 android:layout_margin="5dp" >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/Black"
                android:clickable="true"
                android:onClick="back"
                android:id="@+id/back"
                android:drawableRight="@android:drawable/ic_menu_revert"
                android:background="@drawable/mytext"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:clickable="true"
                android:onClick="reset"
                android:textColor="@color/Black"
                android:id="@+id/reset"
                android:drawableRight="@android:drawable/ic_menu_rotate"
                android:background="@drawable/mytext"/>
        <TextView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/mytext"
            android:clickable="true"
            android:drawableRight="@android:drawable/ic_menu_help"
            android:onClick="help"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Black" />
    </LinearLayout >
</LinearLayout>

